class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        vector<int> res;
        short int c=1;
        for(int i=digits.size()-1; i>=0;i--){
            c+=digits[i];
            if(c>9) {
                res.insert(res.begin(),0);
                c=1;
            }
            else{
                res.insert(res.begin(),c);
                c=0;
            }
        }
        if(c) res.insert(res.begin(),c);
        return res;
    }
};
